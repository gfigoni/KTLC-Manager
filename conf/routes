# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /ktlc/{number}                          Application.ktlc
GET     /ktlc									Application.ktlcs
GET     /player/{loginName}                     Application.player
GET		/player 								Application.players
GET		/mapper/{loginName}						Application.mapper
GET		/mapper									Application.mappers
GET		/statistics								Application.statistics
GET		/regenStats								stats.StatisticsManager.regenStats
GET		/manageParameters						stats.StatisticsManager.manageParameters
GET		/changeLocale							Application.changeLocale

# Comparators
GET		/comparePlayers/{loginName1}/{loginName2}	Application.comparePlayers
GET		/comparePlayers/{loginName1}			Application.comparePlayers
GET		/comparePlayers							Application.comparePlayers
POST	/comparePlayersPost						Application.comparePlayersPost

GET		/compareMappers/{loginName1}/{loginName2}	Application.compareMappers
GET		/compareMappers/{loginName1}			Application.compareMappers
GET		/compareMappers							Application.compareMappers
POST	/compareMappersPost						Application.compareMappersPost

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Import CRUD routes
*       /admin                                  module:crud

# Import Secure routes
*       /                                       module:secure

# Catch all
*       /{controller}/{action}                  {controller}.{action}
